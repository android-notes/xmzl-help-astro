---
let {src, alt = '', width = '550px'} = Astro.props

const height = 'auto'
---
<div>
    <iframe src={src}
            style={{border: '0px solid #000', framespacing: '0'}}
            scrolling="no" frameborder="no" allowfullscreen="true"></iframe>
</div>
<style define:vars={{width, height}}>
    div {
        width: 100%;
        display: flex;
        justify-content: center;
        margin: 15px 0;
        background: #0f4d8a;
    }

    iframe {
        width: 100%;
        height: 480px;
    }

</style>