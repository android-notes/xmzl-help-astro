---
let {src, alt = '', width = '550px'} = Astro.props
if (!src.startsWith("http")) {
    src = `https://static.xmzl.work/help${src}`
}
const height = 'auto'
---
<div>
    <img src={src} alt={alt}/>
</div>
<style define:vars={{width, height}}>
    div {
        width: 100%;
        display: flex;
        justify-content: center;
        margin: 15px 0;
    }

    img {
        width: var(--width);
        height: var(--height);
        border: #dcdfe1 solid 1px;
        border-radius: 8px;
        box-shadow: 0 0 10px #0003;
        text-align: center;
    }

    @media screen and (max-width: 768px) {
        img {
            width: min(100% - 2em, var(--width));
        }
    }
</style>