---
import '../styles/md.css'
const {title, modifyDate} = Astro.props;
---
<!-- -->
<div class="root">
    <div class="content">
        <h1>{title}</h1>
        <div class="slot">
            <slot/>
        </div>
        <p>修改日期：{modifyDate}</p>
    </div>
</div>
<!-- -->
<style>
    h1 {
        width: 100%;
        text-align: center;
        padding: 15px;
        margin: 0;
    }

    .root {
        padding: 2em;
        justify-items: center;
        align-content: center;
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .content {
        max-width: 900px;
        white-space: normal;
        word-break: break-word;
    }

    p {
        width: 100%;
        text-align: center;
        color: #7e7e7e;
        font-size: 0.85em;
    }

    .slot {
        min-height: 100vh;
    }
</style>